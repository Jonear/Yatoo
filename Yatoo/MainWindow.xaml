                        <ImageBrush ImageSource="/Yatoo;component/Images/White.jpg" Stretch="UniformToFill" TileMode="None" Opacity="0"/>
                    </ListBox.Background>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="stackpanel" Height="45" Width="270" Orientation="Horizontal">
