            <Style.Triggers>
                <Trigger Property="IsFocused" Value="true">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border  CornerRadius="3,3,3,3"  x:Name="Bd" BorderBrush="Gray"  BorderThickness="1" Background="White">
                                    <ScrollViewer Margin="0,3,0,0" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" x:Name="PART_ContentHost">
                                        <ScrollViewer.Background>
                                            <SolidColorBrush Opacity="0"></SolidColorBrush>
                                        </ScrollViewer.Background>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
