        <Label Name="Username" Content="Jonear" Margin="98.008,29.333,32.992,0" Height="30" VerticalAlignment="Top" FontSize="15" FontWeight="Bold"/>
        <!--内容-->
        <TabControl  x:Name="TabControl" Margin="1,130,1,29.5" BorderBrush="White">
            <TabControl.Background>
                <ImageBrush x:Name="foreground" ImageSource="/Yatoo;component/Images/White.jpg" Stretch="UniformToFill" TileMode="None" Opacity="1"/>
            </TabControl.Background>
            <TabItem Style="{StaticResource TabItem_message}"  x:Name="Message">
                <ListBox Name="User_list" Margin="-3,0,-3.5,0" Height="398.5" VerticalAlignment="Bottom" BorderThickness="0" MouseDoubleClick="ListDoubleClick">
