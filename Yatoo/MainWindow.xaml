                            		   <LinearGradientBrush StartPoint="0,0" EndPoint="0,1.5">
                                             <LinearGradientBrush.GradientStops>
                                                 <GradientStopCollection>
                                                      <GradientStop Color="#FF786F6F" Offset="0"/>
                                                      <GradientStop Color="{Binding (Control.Background).(SolidColorBrush.Color), RelativeSource={RelativeSource TemplatedParent}}" Offset="1"/>
                                                 </GradientStopCollection>
                                      </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>                         	
								</Line.Stroke>                     
							</Line>
                            <ContentPresenter x:Name="ContentPresenter" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="True" Width="30" OpacityMask="#FFD81616"/>
                        </Grid>
                        <!-- 设置鼠标移到关闭按钮上的效果 -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="grid">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1.5">
                                             <LinearGradientBrush.GradientStops>
                                                 <GradientStopCollection>
                                                      <GradientStop Color="#FF3ED0A5" Offset="0"/>
													  <GradientStop Color="{Binding (Control.Background).(SolidColorBrush.Color), RelativeSource={RelativeSource TemplatedParent}}" Offset="0.6"/>
                                                      <GradientStop Color="{Binding (Control.Background).(SolidColorBrush.Color), RelativeSource={RelativeSource TemplatedParent}}" Offset="1"/>
                                                 </GradientStopCollection>
                                      </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>                              
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{x:Null}"/>
        </Style>
		<!--个性签名框-->
		<Style x:Key="Textbox" TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="Black"/>
			<Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="5,5,5,5" x:Name="grid" Margin="-18,-2,6,-6">
                            <Label Name="label" Content="{TemplateBinding Property=Text}" />
                        </Border>
                        <!-- 设置鼠标移到关闭按钮上的效果 -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderThickness" TargetName="grid" Value="1"/>
                                <Setter Property="BorderBrush" TargetName="grid" Value="Gray"/>
                                <Setter Property="Background" TargetName="grid">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1.5">
                                             <LinearGradientBrush.GradientStops>
                                                 <GradientStopCollection>
                                                     <GradientStop Color="#FFF" Offset="0"/>
                                                     <GradientStop Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Button.Background).(SolidColorBrush.Color)}" Offset="0.5"/>
                                                     <GradientStop Color="#FFF" Offset="1"/>
                                                 </GradientStopCollection>
                                         </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>                              
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="true">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Margin="-18,-2,6,-6" CornerRadius="3,3,3,3" BorderBrush="Gray"   x:Name="Bd" BorderThickness="1" Background="White">
                                    <ScrollViewer Margin="0,3,0,0" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" x:Name="PART_ContentHost">
                                        <ScrollViewer.Background>
                                            <SolidColorBrush Opacity="0"></SolidColorBrush>
                                        </ScrollViewer.Background>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
