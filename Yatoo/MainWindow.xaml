    </Window.Background>
    <Grid>
        <Border Name="BorderBackground" CornerRadius="10,10,10,10" Height="Auto" BorderBrush="Gray" BorderThickness="1">
            <Border.Background>
                <ImageBrush ImageSource="/Yatoo;component/Images/background.jpg" Stretch="UniformToFill" TileMode="None" Opacity="1"/>
            </Border.Background>
        </Border>
        <!--标题-->
        <Label Content=" Yatoo" Height="30" HorizontalAlignment="Left" x:Name="Title" VerticalAlignment="Top" Foreground="Black" FontSize="17" FontFamily="Vani" />
        <!--右上角的关闭按钮-->
        <Button x:Name="Button_Close" Style="{StaticResource Button_Close}" Click="CloseWindow" Width="32" Height="25" Content="   ╳" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,1,0"/>
        <!--桌面悬浮版切换按钮-->
        <Button x:Name="Button_Maximum" Style="{StaticResource Button_Window}" Click="MaximumWindow" Width="28.666" Height="22.333" Content="  ¤" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,34.334,0"/>
	    <!--最小化按钮-->
        <Button x:Name="Button_Minimum" Style="{StaticResource Button_Window}" Click="MinimumWindow" Width="29.333" Height="22.333" Content="  ━" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,64,0"/>
        <!--头像-->
        <Image x:Name="Logo" Stretch="Fill" Source="/Yatoo;component/Images/未命名.jpg" Margin="8,30,0,0"  Width="63" Height="63" HorizontalAlignment="Left" VerticalAlignment="Top" d:LayoutOverrides="Width, Height"/>
        <!--状态-->
        <Image x:Name="State" Stretch="Fill" Source="/Yatoo;component/Images/online.png" Margin="85,39,0,0"  Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Top" d:LayoutOverrides="Width, Height" Opacity="0.7"/>
        <!--搜索框-->
